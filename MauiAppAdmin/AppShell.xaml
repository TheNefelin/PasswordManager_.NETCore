<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppAdmin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppAdmin.Views"
    Title="MauiAppAdmin">

    <Shell.ToolbarItems>
        <ToolbarItem x:Name="Logout" Text="Logout" Clicked="OnLogoutClicked" />
    </Shell.ToolbarItems>

    <TabBar>
        <Tab Title="Secreto" Icon="icon_book_512.png">
            <ShellContent ContentTemplate="{DataTemplate local:CorePage}" />
        </Tab>
        <Tab Title="Chat" Icon="icon_chat_512.png">
            <ShellContent ContentTemplate="{DataTemplate local:ChatPage}" />
        </Tab>
        <Tab Title="Perfil" Icon="icon_dragon_512.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
