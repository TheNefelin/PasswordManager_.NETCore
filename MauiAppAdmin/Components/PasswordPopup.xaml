<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MauiAppAdmin.Components.PasswordPopup"
               Size="300,200">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Ingrese su contraseña" FontSize="18" FontAttributes="Bold"/>
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Aceptar" Clicked="OnAcceptClicked"/>
    </VerticalStackLayout>

</toolkit:Popup>
