<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppTry.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiAppTry.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppTry">
    
    <Shell.ToolbarItems>
        <ToolbarItem x:Name="Logout" Text="Logout" Clicked="OnLogoutClicked" />
    </Shell.ToolbarItems>

    <TabBar IsVisible="True">
        <Tab Title="Secreto" Icon="icon_book_512.png">
            <ShellContent ContentTemplate="{DataTemplate views:CorePage}" />
        </Tab>
        <Tab Title="Perfil" Icon="icon_dragon_512.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
