<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MauiAppAdmin.Components.PasswordPopup"
               Size="300,200" Color="Transparent">

    <Border BackgroundColor="Black" Stroke="White" StrokeThickness="1" Padding="20">
        <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="Black">
            <Label Text="Ingrese su contraseña" FontSize="18" FontAttributes="Bold"/>
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"/>
            <Button Text="Aceptar" Clicked="OnAcceptClicked"/>
        </VerticalStackLayout>
    </Border>

</toolkit:Popup>
